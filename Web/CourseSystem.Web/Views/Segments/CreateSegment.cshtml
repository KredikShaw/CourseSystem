                        <input asp-for="WrongAnswer2" type="text" class="form-control" id="WrongAnswer2" name="WrongAnswer2" style="border: 2px solid transparent; border-color:#dc3545;" placeholder="Wrong option...">
                        <span asp-validation-for="WrongAnswer2"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WrongAnswer3" for="wrongOption3">Wrong Option</label>
                        <input asp-for="WrongAnswer3" type="text" class="form-control" id="WrongAnswer3" name="WrongAnswer3" style="border: 2px solid transparent; border-color:#dc3545;" placeholder="Wrong option...">
                        <span asp-validation-for="WrongAnswer3"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="LessonId" type="hidden" class="form-control" id="lessonId" name="lessonId" value="@Model.LessonId">
                    </div>
                    <div class="form-group">
                        <input asp-for="PlaceInLessonOrder" type="hidden" class="form-control" id="PlaceInLessonOrder" name="PlaceInLessonOrder" value=@Model.PlaceInLessonOrder>
                    </div>
                    <div class="form-group">
                        <input asp-for="CourseId" type="hidden" class="form-control" id="courseId" name="courseId" value=@Model.CourseId>
                    </div>
                    <div class="form-group">
                        <input asp-for="Discriminator" type="hidden" class="form-control" id="discriminator" name="discriminator" value="TestSegment">
                    </div>
                    <div class="button-wrapper">
                        <button type="submit" class="btn btn-primary" name="submitType" value="another">Add Another Section</button>
                        <button type="submit" class="btn btn-primary" name="submitType" value="finishLesson">Finish Lesson</button>
                        <button type="submit" class="btn btn-primary" name="submitType" value="finishCourse">Finish Course</button>
                        @*<a onclick="img_find()" class="btn btn-primary">Upload</a>*@
