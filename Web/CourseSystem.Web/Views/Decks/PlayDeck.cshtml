
@{
    ViewData["Title"] = "PlayDeck";
}

@model CourseSystem.Web.ViewModels.Decks.CardViewModel

<link href="~/css/style2.css" rel="stylesheet" />
<link href="~/fontawesome/css/all.css" rel="stylesheet" />

<section class="d-flex justify-content-center align-items-center text-center">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.DeckName</h5>
            <h2 class="card-text">@Model.FrontSide</h2>
            <a href="#" class="btn btn-primary" style="font-size: 1em;">Flip</a>
        </div>
    </div>
    @* finish styling, use javascript for card flip, keep count? *@
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Model.DeckName</h5>
            <h2 class="card-text">@Model.BackSide</h2>
            <a asp-action="PlayDeck" asp-route-deckId="@Model.DeckId" asp-route-name="@Model.DeckName" class="btn btn-danger" style="font-size: 1em; margin-right: 3em; width: 2em;"><i class="fas fa-times"></i></a>
            <a asp-action="PlayDeck" asp-route-deckId="@Model.DeckId" asp-route-name="@Model.DeckName" class="btn btn-success" style="font-size: 1em; width: 2em;"><i class="fas fa-check"></i></a>
        </div>
    </div>
</section>