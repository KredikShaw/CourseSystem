
@{
    ViewData["Title"] = "Report";
}
@model CourseSystem.Web.ViewModels.Reports.ReportInputModel
<div class="wrapper p-5 m-2">
    <form method="post">
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" type="text" class="form-control" name="Title" id="Title" aria-describedby="titleHelp" placeholder="Enter title">
            <small id="titleHelp" class="form-text text-muted">What is the problem about</small>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" type="text" class="form-control" name="Description" id="Description" aria-describedby="descriptionHelp" rows="10" placeholder="Enter description..."></textarea>
            <small id="descriptionHelp" class="form-text text-muted">Give us a short description of the problem with a lot of keywords</small>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <input asp-for="CourseId" type="hidden" class="form-control" id="courseId" name="courseId" value="@Model.CourseId">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>