
@{
    ViewData["Title"] = "CreateLesson";
}
@model CourseSystem.Web.ViewModels.Lessons.LessonInputModel
<link href="~/css/style4.css" rel="stylesheet" />

<div class="wrapper">
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Title</label>
            <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description">Topic</label>
            <textarea asp-for="Description" class="form-control" id="Description" name="Description" rows="3"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-group">
            <input asp-for="CourseId" type="hidden" class="form-control" id="courseId" name="courseId" value="@Model.CourseId">
        </div>
        <div class="form-group">
            <input asp-for="PlaceInOrder" type="hidden" class="form-control" id="placeInOrder" name="placeInOrder" value=0>
        </div>
        <div class="button-wrapper">
            <button type="submit" class="btn btn-primary">Add Section</button>
        </div>
    </form>
</div>