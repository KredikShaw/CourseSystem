@{
    ViewData["Title"] = "Home";
}
<link href="~/css/enrolledcourses.css" rel="stylesheet">
<div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="sidebar-bg" id="sidebar-wrapper">
        <div class="sidebar-heading sidebar-bg">Profile</div>
        <div class="list-group list-group-flush sidebar-bg">
            <a href="#" class="list-group-item list-group-item-action sidebar-bg">Enrolled Courses</a>
            <a href="#" class="list-group-item list-group-item-action sidebar-bg">Created Courses</a>
            <a href="#" class="list-group-item list-group-item-action sidebar-bg">Decks</a>
        </div>
    </div>
    <!-- /#sidebar-wrapper -->
    <!-- Page Content -->
    <div id="page-content-wrapper">

        
        <div class="container">
            <div class="d-flex justify-content-center">
                <div class="searchbar">
                    <input class="search_input" type="text" name="" placeholder="Search...">
                    <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                </div>
            </div>
        </div>

        <div class="main">
            <div class="course">
                <img src="placeholder.png" alt="">
                <div>
                    <h1 class="title">Title</h1>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="lower">
                        <h3>25/38</h3>
                        <h3>Hard</h3>
                        <div class="next btn">Next</div>
                    </div>
                </div>
            </div>
        </div>



    </div>
    <!-- /#page-content-wrapper -->

</div>
<!-- /#wrapper -->
<!-- Bootstrap core JavaScript -->
<script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
</script>
